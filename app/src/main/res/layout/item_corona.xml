<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    app:cardCornerRadius="6dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_provinsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito"
                android:text="Nama Provinsi"
                android:textColor="@color/grey_800"
                android:textSize="13sp"
                android:textStyle="bold" />

            <!--Positif-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito"
                    android:text="Kasus Positif"
                    android:textColor="@color/grey_800"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:fontFamily="@font/nunito"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/grey_800"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_kasus_positif"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/nunito"
                    android:gravity="end"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/grey_800"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!--Sembuh-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito"
                    android:text="Kasus Sembuh"
                    android:textColor="@color/grey_800"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:fontFamily="@font/nunito"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/grey_800"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_kasus_sembuh"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/nunito"
                    android:gravity="end"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/grey_800"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!--Meninggal-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito"
                    android:text="Kasus Meninggal"
                    android:textColor="@color/grey_800"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:fontFamily="@font/nunito"
                    android:gravity="center_horizontal"
                    android:text=":"
                    android:textAlignment="center"
                    android:textColor="@color/grey_800"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_kasus_meninggal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.5"
                    android:fontFamily="@font/nunito"
                    android:gravity="end"
                    android:text="0"
                    android:textAlignment="textEnd"
                    android:textColor="@color/grey_800"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_400" />

</LinearLayout>